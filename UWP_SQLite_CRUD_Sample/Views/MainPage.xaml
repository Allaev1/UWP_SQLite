<Page
    x:Class="UWP_SQLite_CRUD_Sample.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_SQLite_CRUD_Sample"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dataBase="using:DataBase" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <AppBarButton HorizontalAlignment="Right" Icon="Add" Command="{x:Bind ViewModel.AddCommand}" Grid.Column="1"/>

        <TextBlock Text="Products is available" Grid.Row="1" HorizontalAlignment="Center" />
        <TextBlock Text="Discontinued product" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center"/>

        <ListView x:Name="SimpleList" ItemsSource="{x:Bind ViewModel.AvailableProducts}" 
                  CanDragItems="True" 
                  DragItemsStarting="{x:Bind ViewModel.DragItemsStarting}"
                  Grid.Row="2"
                  AllowDrop="True">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="dataBase:Product">
                    <StackPanel>
                        <TextBlock>
                        <Run Text="ID - "/>
                        <Run Text="{x:Bind Id}"/>
                        <Run Text=". "/>
                        <Run Text="{x:Bind ProductName}"/>
                        <Run Text=" - "/>
                        <Run Text="{x:Bind UnitPrice}"/>
                        </TextBlock>
                        <!--<ToggleSwitch Margin="20,0,0,0" OnContent="Discontinued" OffContent="Continued"/>-->
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Grid.Column="1" 
                  ItemsSource="{x:Bind ViewModel.DiscontinuedProducts}"
                  Grid.Row="2"
                  AllowDrop="True"
                  CanDragItems="True"
                  DragOver="{x:Bind ViewModel.DragOver}"
                  Drop="{x:Bind ViewModel.Drop}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="dataBase:Product">
                    <StackPanel>
                        <TextBlock>
                        <Run Text="ID - "/>
                        <Run Text="{x:Bind Id}"/>
                        <Run Text=". "/>
                        <Run Text="{x:Bind ProductName}"/>
                        <Run Text=" - "/>
                        <Run Text="{x:Bind UnitPrice}"/>
                        </TextBlock>
                        <!--<ToggleSwitch Margin="20,0,0,0" OnContent="Discontinued" OffContent="Continued"/>-->
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
